	end)

	U.forEach(C.Colors, function(color)
		local pouch = getObjectFromGUID(G.playerObjs[color].pouch)
		M.processContainer(pouch, nil, function(obj)
			if obj.hasTag("ChapterCard") then
				obj.setRotation({0, 180, 180})
			elseif obj.hasTag("Mission") then
