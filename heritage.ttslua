function HUD_switchStickerTraits()
	if isSwitchedStickerTraits == nil then
		if S.isInPhase("AFTERMATH") then
			isSwitchedStickerTraits = true
		else
			isSwitchedStickerTraits = false
		end
	end
	if isSwitchedStickerTraits == true then
		isSwitchedStickerTraits = false
		HUD_showTraits()
	else
		isSwitchedStickerTraits = true
		HUD_showStickers()
	end
end
