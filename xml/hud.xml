
<!-- HUD -->
<Defaults>
  <!-- Baseline -->
  <Image preserveAspect="true" raycastTarget="false" />
  <VerticalLayout raycastTarget="false" />
  <HorizontalLayout raycastTarget="false" />

  <!-- Camera Controls -->
  <HorizontalLayout class="hud-camera-controls"
    rectAlignment="LowerRight"
    padding="0 0 0 0"
    spacing="0"
    height="28" width="800"
    scale="0.7"
    childAlignment="LowerRight"
    childForceExpandHeight="true"
    childForceExpandWidth="false" />

  <Image class="camera-button"
    raycastTarget="true"
    onMouseDown="HUD_cameraSet"
    onMouseEnter="HUD_highlight" onMouseExit="HUD_dim" />

  <!-- Right Sidebar -->
  <Panel class="hud-sidebar-right"
    rectAlignment="LowerRight"
    height="605" width="125"
    offsetXY="0 100" />
  <VerticalLayout class="hud-sidebar-right"
    height="100%" width="100%"
    childAlignment="LowerLeft"
    childForceExpandHeight="false"
    childForceExpandWidth="true" />

  <!-- Right Sidebar Buttons -->
  <Image class="hud-ref-button"
    onMouseDown="HUD_show" onMouseUp="HUD_hide"
    onMouseEnter="HUD_highlight" onMouseExit="HUD_dim" />
  <Image class="hud-ref-button-base"
    raycastTarget="true"
    color="rgba(0.5, 0.5, 0.5, 1)" />
  <Image class="hud-ref-button-overlay"
    color="clear" />
  <Image class="hud-ref-border"
    rectAlignment="MiddleLeft" />

  <!-- Popup Reference Images -->
  <Image class="hud-ref-image" active="false" />
  <Image class="hud-ref-image-clan" width="60%" />

</Defaults>


