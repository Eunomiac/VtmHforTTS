	<Text class="scoring-placement" showAnimation = "FadeIn" animationDuration = "3" showAnimationDelay = "3" />
	<Text class="scoring-name" showAnimation = "SlideIn_Left" showAnimationDelay = "0" />
	<Text class="scoring-total" showAnimation = "FadeIn" animationDuration = "3" showAnimationDelay = "0" />

	<Text class="scoring-subTotal" showAnimation = "FadeIn" />
	<Text class="scoring-subTotal-1" showAnimationDelay = "1.25" />
	<Text class="scoring-subTotal-2" showAnimationDelay = "1.5" />
	<Text class="scoring-subTotal-3" showAnimationDelay = "1.75" />
	<Text class="scoring-subTotal-4" showAnimationDelay = "2" />
