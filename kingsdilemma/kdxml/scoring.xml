<Defaults>
	<Panel class="scoring-splash"
		color = "rgba(0, 0, 0, 0.85)"
		showAnimation = "FadeIn"
		hideAnimation = "FadeOut"
		animationDuration = "0.5" />

	<VerticalLayout class="scoring-splash-root"
		spacing = "0"
		childAlignment = "UpperCenter"
		showAnimation = "FadeIn"
		hideAnimation = "FadeOut"
		childForceExpandHeight = "false"
		childForceExpandWidth = "false"
		height = "250" width = "650"
		preferredWidth = "650" flexibleWidth = "0" minWidth = "650"
		padding = "0 0 65 65"
		animationDuration = "0.5" />
	<VerticalLayout class="scoring-splash"
		preferredWidth = "650" flexibleWidth = "0" minWidth = "650"
		childAlignment = "UpperCenter" />


	<VerticalLayout class="scoring-splash-image"
		ignoreLayout = "true"
		childAlignment = "UpperCenter"
		position = "MiddleCenter"
		spacing = "-1"
		height = "100%"
		width = "100%" />
	<Image class="scoring-top"
		preferredWidth = "650" flexibleWidth = "0" minWidth = "650"
		preferredHeight = "65" flexibleHeight = "0" minHeight = "65"
		image = "splash-border-above" />
	<Image class="scoring-bottom"
		preferredWidth = "650" flexibleWidth = "0" minWidth = "650"
		preferredHeight = "65" flexibleHeight = "0" minHeight = "65"
		image = "splash-border-under" />
	<Image class="scoring-splash-bg"
		preferredWidth = "1000" flexibleWidth = "0" minWidth = "1000"
		preserveAspect = "false"
		image = "splash-bg" />

	<Text class="scoring-splash"
		alignment = "MiddleCenter"
		font = "Fonts/Friz"
		resizeTextForBestFit = "false"
		showAnimation = ""
		hideAnimation = ""
		animationDuration = "0"
		color = "rgba(1,1,1,1)"
		verticalOverflow = "Overflow"
		horizontalOverflow = "Wrap"
		fontSize = "50"
		preferredHeight = "50" minHeight = "50" flexibleHeight = "0"
		preferredWidth = "5000" minWidth = "5000" flexibleWidth = "0"
		scale = "1 1 1" />
</Defaults>

<Panel id="scoringSplashScreen" color = "rgba(0, 0, 0, 1)" animationDuration = "5" showAnimation = "FadeIn" hideAnimation = "FadeOut" class="scoring-splash" active="false">
	<VerticalLayout class="scoring-splash-root" offsetXY = "0 100">
		<VerticalLayout class="scoring-splash-image">
			<Image class="scoring-top" />
			<Image class="scoring-splash-bg" />
			<Image class="scoring-bottom" />
		</VerticalLayout>
		<VerticalLayout class="scoring-splash">
			<Text class="scoring-splash">Scoring</Text>
		</VerticalLayout>
	</VerticalLayout>
</Panel>

<Defaults>
