<Defaults>
	<Panel class="king-query"
		height="100%"
		width="100%"
		showAnimation = "FadeIn"
		hideAnimation = "FadeOut"
		animationDuration = "0.5"
		childForceExpandHeight = "false"
		childAlignment = "MiddleCenter"
		padding = "5 5 5 5"
		offsetXY = "0 -100" />


	<VerticalLayout class="king-query"
		childAlignment = "UpperCenter" />

	<HorizontalLayout class="king-query"
		preferredHeight = "140" flexibleHeight = "0"
		padding = "10"
		spacing = "20"
		childAlignment = "UpperCenter"
		childForceExpandWidth = "false"
		childForceExpandHeight = "false" />

	<Image class="king-top"
		preferredHeight = "100" flexibleHeight = "0" minHeight = "100"
		image = "splash-border-above" />
	<Image class="king-bottom"
		ignoreLayout = "true"
		height = "100"
		rectAlignment = "LowerCenter"
		offsetXY = "0 -80"
		preferredHeight = "100" flexibleHeight = "0" minHeight = "100"
		image = "splash-border-under" />
	<Image class="king-bg"
		ignoreLayout = "true"
		preserveAspect = "false"
		height = "100%"
		width = "150%"
		image = "splash-bg" />

	<Panel class="king-option"
		preferredHeight = "120" flexibleHeight = "0"
		preferredWidth = "120" flexibleWidth = "0" />
	<Image class="king-option"
		raycastTarget = "true"
    onMouseDown="King_HUD_Click"
    onMouseEnter="King_HUD_HoverOn"
		onMouseExit="Consequence_HUD_HoverOff" />
	<Image class="outcome-pos" color="#1E87FF7F" />
	<Image class="outcome-neg" color="#DA19177F" />
	<Image class="consequence-off" color="#7F7F7F7F" />

	<Text class="king"
		alignment = "MiddleCenter"
		font = "Fonts/Friz"
		resizeTextForBestFit = "false"
		fontSize = "40"
		showAnimation = ""
		hideAnimation = ""
		animationDuration = "0"
		preferredWidth = "1000" minWidth = "1000"
		color = "rgba(1,1,1,1)"
		shadow = "rgba(0,0,0,1)"
		shadowDistance = "1 -1"
		verticalOverflow = "Overflow"
		horizontalOverflow = "Wrap" />
	<Text class="king-option"
		color = "#FFFFFF88"
		font = "Fonts/CinzelBB"
		fontSize = "45" />
	<Text class="king-player-prompt"
		rectAlignment = "UpperCenter"
		ignoreLayout = "true"
		color = "#FFFFFF"
		font = "Fonts/CinzelBB"
		alignment = "UpperCenter"
		shadow = "#000000"
		shadowDistance = "2 -2"
		fontSize = "70" />

	<InputField class="king"
		colors = "#FFFFFF00|#FFFFFF00|#C8C8C800|#BBBBBB00"
		lineType = "SingleLine"
		characterValidation = "Alphanumeric"
		characterLimit = "5"
		font = "Fonts/FrizB"
		alignment = "MiddleCenter"
		fontSize = "70"
		preferredHeight = "125" flexibleHeight = "0"
		preferredWidth = "250" flexibleWidth = "0"
		textColor = "#000000FF"
		caretColor = "#00000000"
		caretWidth = "0"
		placeholder = " "
		scale = "0.8 1 1" />


	<InputField class="king-sticker" onEndEdit="kingHUD_Sticker" />
	<InputField class="king-envelope" onEndEdit="kingHUD_Envelope" />
	<Image class="king-input"
		ignoreLayout = "true"
		rectAlignment = "LowerCenter"
		height = "125"
		width = "200"
		offsetXY = "0 15"
		scale = "1 1 1" />
	<Image class="king-sticker-bg" image="fetch-sticker-bg" color="#FFFFFF33" />
	<Image class="king-sticker-border" image="fetch-sticker-border" />
	<Image class="king-sticker-icon" image="fetch-sticker-icon" />
	<Image class="king-envelope-bg" image="fetch-envelope-bg" color="#FFFFFF33"  />
	<Image class="king-envelope-border" image="fetch-envelope-border" />
	<Image class="king-envelope-icon" image="fetch-envelope-icon" />
</Defaults>

<Panel class="king-query" visibility="Brown">
	<VerticalLayout id="stickerQuery_Brown" class="king-query" active="false">
		<Image class="king-top" />
		<VerticalLayout class="king-query">
			<Image class="king-bg" />
			<Text class="king">Enter the Sticker key shown on the Dilemma.</Text>
			<Image class="king-input king-sticker-bg" />
			<Image class="king-input king-sticker-border" />
			<Image class="king-input king-sticker-icon" />
			<InputField class="king king-sticker"></InputField>
		</VerticalLayout>
		<Image class="king-bottom" />
	</VerticalLayout>
</Panel>
