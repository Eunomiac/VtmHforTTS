<Defaults>
	<Panel class="splash-panel"
		showAnimation = "FadeIn"
		hideAnimation = "FadeOut"
		animationDuration = "0.5"
		childForceExpandHeight = "false"
		childForceExpandWidth = "false"
		childAlignment = "UpperCenter"
		offsetXY = "0 0"
		height = "100%"
		width = "100%"
		padding = "5 5 5 5" />

	<VerticalLayout class="splash-root"
		spacing = "0"
		childAlignment = "UpperCenter"
		showAnimation = "FadeIn"
		hideAnimation = "FadeOut"
		childForceExpandHeight = "false"
		childForceExpandWidth = "false"
		preferredWidth = "650" flexibleWidth = "0" minWidth = "650"
		padding = "0 0 65 65"
		animationDuration = "0.5" />
	<VerticalLayout class="splash-root-mid" childAlignment = "MiddleCenter" />
	<VerticalLayout class="splash-root-low" childAlignment = "LowerCenter" />

	<VerticalLayout class="splash"
		preferredWidth = "650" flexibleWidth = "0" minWidth = "650"
		childAlignment = "UpperCenter" />


	<VerticalLayout class="splash-image-container"
		ignoreLayout = "true"
		childAlignment = "UpperCenter"
		position = "MiddleCenter"
		spacing = "-1"
		height = "100%"
		width = "100%" />
	<Image class="splash-top"
		preferredWidth = "650" flexibleWidth = "0" minWidth = "650"
		preferredHeight = "65" flexibleHeight = "0" minHeight = "65"
		image = "splash-border-above" />
	<Image class="splash-bottom"
		preferredWidth = "650" flexibleWidth = "0" minWidth = "650"
		preferredHeight = "65" flexibleHeight = "0" minHeight = "65"
		image = "splash-border-under" />
	<Image class="splash-bg"
		preferredWidth = "1000" flexibleWidth = "0" minWidth = "1000"
		preserveAspect = "false"
		image = "splash-bg" />

	<Text class="splash"
		alignment = "MiddleCenter"
		font = "Fonts/Friz"
		resizeTextForBestFit = "false"
		showAnimation = ""
		hideAnimation = ""
		animationDuration = "0"
		color = "rgba(1,1,1,1)"
		verticalOverflow = "Overflow"
		horizontalOverflow = "Wrap"
		fontSize = "50"
		preferredHeight = "50" minHeight = "50" flexibleHeight = "0"
		preferredWidth = "5000" minWidth = "5000" flexibleWidth = "0"
		scale = "1 1 1" />
</Defaults>

<Defaults> <!-- Splash Screen Defaults -->
	<Panel class="splash-screen"
		offsetXY = "0 100"
		childAlignment = "MiddleCenter"
		color = "rgba(0, 0, 0, 0.95)"
		scale = "1.75 1.75 1.75" />

	<Text class="splash-intro"
		fontSize = "87"
		preferredHeight = "43" minHeight = "43" flexibleHeight = "0"
		scale = "0.57 0.57 0.57"
	  font = "Fonts/FrizSC" />
	<Text class="splash-intro-sub"
		fontSize = "30"
		scale = "0.57 0.57 0.57"
		preferredHeight = "20" minHeight = "20" alignment = "LowerCenter" flexibleHeight = "0" />



</Defaults>
<Panel id="splashScreen" class="splash-panel splash-screen" active="true">
	<VerticalLayout class="splash-root">
		<VerticalLayout class="splash-image-container">
