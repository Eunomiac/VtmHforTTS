 <!-- COLORBLOCK (for Buttons)
 		"(normalColor|highlightedColor|pressedColor|disabledColor)"
			where each color is formatted as above, e.g.
					"#FFFFFF|White|#C8C8C8|rgba(0.78,0.78,0.78,0.5)" -->
<Defaults>
	<HorizontalLayout
		padding = "10 10 10 10"
		rectAlignment = "UpperLeft"
		childForceExpandWidth = "False"
		childForceExpandHeight = "False" />
	<HorizontalLayout class="buttonPanel" />
	<HorizontalLayout class="displayPanel"
		height="1500"
		width="300"  />

	<VerticalLayout class="buttonBar"
		childAlignment = "UpperLeft"
		childForceExpandWidth = "False"
		childForceExpandHeight = "False" />
	<Button class="buttonPanelToggle"
		width="25"
		colors="#888888|#AAAAAA|#FFFFFF|rgba(0.5, 0.5, 0.5, 0.5)"
		flexibleWidth="0"
		preferredWidth="25"
		offsetXY = "50 -15"
		rectAlignment="UpperLeft" />

	<Panel class="codeDisplayPanel"
		color="rgba(0, 0, 0, 0.5)"
		padding="5 5 5 5"
		height="2500"
		width="300" />
	<Text class="codeDisplay"
		color="White"
		fontSize = "8"
		alignment = "UpperLeft"
		 />

</Defaults>

<HorizontalLayout id="adminControls" class="buttonPanel"
		offsetXY = "40 0">
	<Button id="toggleElem_phaseControls" class="buttonPanelToggle">▼</Button>
	<VerticalLayout id="phaseControls" class="buttonBar" active="true">
		<Button id="setMode_NONE" font="Fonts/FrizB">NONE</Button>
		<Button id="setMode_CAMPAIGN" font="Fonts/FrizB">CAMPAIGN</Button>
		<Button id="setMode_SETUP" font="Fonts/FrizB">SETUP</Button>
		<Button id="setMode_PLAY" font="Fonts/FrizB">PLAY</Button>
		<Button id="setMode_END" font="Fonts/FrizB">END</Button>
	</VerticalLayout>
</HorizontalLayout>

<HorizontalLayout class="buttonPanel"
		offsetXY = "40 -200">
	<Button id="toggleElem_debugControls" class="buttonPanelToggle">►</Button>
	<VerticalLayout id="debugControls" class="buttonBar" active="true">
		<Button id="prompt_assignHouse" font="Fonts/FrizB">Assign House</Button>
		<Text preferredHeight="10"> </Text>
		<Button id="debug_resetState" font="Fonts/FrizB">Reset State</Button>
		<Text preferredHeight="10"> </Text>
		<Button id="debug_setArrows" font="Fonts/FrizB">Light Arrows</Button>
		<Text preferredHeight="10"> </Text>
		<Button id="debug_testFunc1" font="Fonts/FrizB">Test Func 1</Button>
		<!-- <Button id="debug_testFunc2" font="Fonts/FrizB">Test Func 2</Button> -->
		<!-- <Button id="debug_testFunc3" font="Fonts/FrizB">Test Func 3</Button> -->
		<!-- <Button id="debug_testFunc4" font="Fonts/FrizB">Test Func 4</Button> -->
		<!-- <Button id="debug_testFunc5" font="Fonts/FrizB">Test Func 5</Button> -->
	</VerticalLayout>
</HorizontalLayout>

<HorizontalLayout class="displayPanel"
		offsetXY = "175 0">
	<Button id="toggleElem_stateDisplayPanel" class="buttonPanelToggle">►</Button>
	<Panel id="stateDisplayPanel" class="codeDisplayPanel" active="True">
		<Text id="stateDisplay" class="codeDisplay"></Text>
	</Panel>
</HorizontalLayout>
