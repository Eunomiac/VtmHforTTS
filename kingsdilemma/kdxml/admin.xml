	<Button class="hud-control-button"
		onClick = "HUDControl_Click" />
	<Button class="button-Brown" textColor = "#777777FF" color = "#703a16ff|#b79c8aff|#dbcdc4ff|#777777FF" />
	<Button class="button-Red" color = "#da1917ff|#ec8c8bff|#f5c5c5ff|#777777FF" />
