<Defaults>
	<VerticalLayout class="adminContainer"
		width = "800"
		spacing = "0"
		padding = "5 0 0 0"
		rectAlignment = "UpperLeft"
		offsetXY = "40 -10" />
	<HorizontalLayout class="gameStatusDisplay"
		childAlignment = "MiddleLeft"
		preferredHeight = "25"
		flexibleHeight = "0"
		spacing = "10"
		padding = "0 0 0 0" />
	<Text class="gameStatusDisplay"
		color = "Yellow"
		alignment = "MiddleCenter"
		fontSize = "14"
		outline = "Black"
		preferredHeight = "25"
		font = "Fonts/FrizB" />

	<VerticalLayout class="map-light-control-container"
		width = "380"
		height = "80"
		rectAlignment = "UpperLeft"
		offsetXY = "50 -10"
		padding = "0 0 0 0"
		scale = "0.5 0.5 0.5"
		spacing = "0" />

	<Image class="map-light-confirm"
		ignoreLayout = "true"
		preserveAspect = "false"
		rectAlignment = "MiddleRight"
		raycastTarget = "true"
		onMouseDown = "MapHUD_Confirm"
		offsetXY = "60 0"
		color = "#FFF2CC"
		height = "40"
		width = "50" />

	<Text class="map-light-confirm"
		font = "Fonts/FrizB"
		fontSize = "30"
		height = "50"
		width = "50"
		color = "#000000"
		outline = ""
		shadow = ""
		ignoreLayout = "true"
		pivot = "0.5 0.5"
		alignment = "MiddleCenter"
		rectAlignment = "MiddleRight"
		offsetXY = "35 0" />

	<InputField class="map-light-input"
		scale = "1 1 1"
		preferredHeight = "40" flexibleHeight = "0" minHeight = "40"
		preferredWidth = "300" flexibleWidth = "0" minWidth = "300"
		font = "Fonts/FrizB"
		fontSize = "20"
		onValueChanged = "MapHUD_Update" />
</Defaults>

<VerticalLayout class="adminContainer" visibility="Host">
	<HorizontalLayout id="sessionPreflightDisplay" class="gameStatusDisplay" active="False">
		<Text class="gameStatusDisplay" color="White">Initialize:</Text>
		<Button id="initPreflight">Preflight</Button>
	</HorizontalLayout>
	<HorizontalLayout id="sessionInitDisplay" class="gameStatusDisplay" active="False">
		<Text class="gameStatusDisplay" color="White">Initialize:</Text>
		<Button id="initSession">Session</Button>
	</HorizontalLayout>
	<HorizontalLayout id="gameStatusDisplay" class="gameStatusDisplay" active="False">
		<Text class="gameStatusDisplay" color="White">Current:</Text>
		<Text id="currentGameModeDisplay" class="gameStatusDisplay"></Text>
		<HorizontalLayout id="currentGamePhaseContainer" class="gameStatusDisplay" active="False">
			<Text class="gameStatusDisplay" color="White"> ♦ </Text>
			<Text id="currentGamePhaseDisplay" class="gameStatusDisplay"></Text>
		</HorizontalLayout>
		<Button id="advanceGamePhase">Advance To ►</Button>
		<Text id="nextGameModeDisplay" class="gameStatusDisplay"></Text>
		<HorizontalLayout id="nextGamePhaseContainer" class="gameStatusDisplay" active="False">
			<Text class="gameStatusDisplay" color="White"> ♦ </Text>
			<Text id="nextGamePhaseDisplay" class="gameStatusDisplay"></Text>
		</HorizontalLayout>
	</HorizontalLayout>

	<HorizontalLayout class="buttonPanel">
		<Button id="toggleElem_lightControls" class="buttonPanelToggle">►</Button>
		<VerticalLayout id="lightControls" class="map-light-control-container" visibility="Host" active="false">
			<InputField id="mapHUD_LightCoords_A" class="map-light-input" />
			<InputField id="mapHUD_LightCoords_B" class="map-light-input" />
		<Text class="spacer_10"></Text>
		<Text class="spacer_10"></Text>
			<Button id="captureNext" scale="2 2 2">Capture</Button>
			<Image id="debugLightImage" class="map-light-confirm" />
			<Text id="debugLightText" class="map-light-confirm">OK</Text>
		</VerticalLayout>
	</HorizontalLayout>
</VerticalLayout>
