<Defaults>
	<Panel class="input-query"
		height="100%"
		width="100%"
		showAnimation = "FadeIn"
		hideAnimation = "FadeOut"
		animationDuration = "0.5"
		childForceExpandHeight = "false"
		childAlignment = "LowerCenter"
		padding = "5 5 5 5"
		offsetXY = "0 100" />
	<Panel class="king-query"
		childAlignment = "MiddleCenter"
		animationDuration = "1.5"
		offsetXY = "0 -100" />

	<VerticalLayout class="input-query"
		childForceExpandHeight = "false"
		childForceExpandWidth = "false"
		childAlignment = "UpperCenter" />

	<HorizontalLayout class="input-query"
		preferredHeight = "140" flexibleHeight = "0"
		padding = "10"
		spacing = "20"
		childAlignment = "UpperCenter"
		childForceExpandWidth = "false"
		childForceExpandHeight = "false" />
	<HorizontalLayout class = "input-king-container"
		padding = "0 0 0 0"
		spacing = "0" />

	<Image class="input-top"
		preferredHeight = "100" flexibleHeight = "0" minHeight = "100"
		image = "splash-border-above" />
	<Image class="input-bottom"
		ignoreLayout = "true"
		height = "100"
		rectAlignment = "LowerCenter"
		offsetXY = "0 -80"
		preferredHeight = "100" flexibleHeight = "0" minHeight = "100"
		image = "splash-border-under" />
	<Image class="input-bg"
		ignoreLayout = "true"
		preserveAspect = "false"
		height = "100%"
		width = "150%"
		image = "splash-bg" />

	<Panel class="input-option"
		preferredHeight = "120" flexibleHeight = "0"
		preferredWidth = "120" flexibleWidth = "0" />
	<Image class="input-option"
		raycastTarget = "true"
    onMouseDown="Consequence_HUD_Click"
    onMouseEnter="Consequence_HUD_HoverOn"
		onMouseExit="Consequence_HUD_HoverOff" />
	<Image class="outcome-pos" color="#1E87FF7F" />
	<Image class="outcome-neg" color="#DA19177F" />
	<Image class="consequence-off" color="#7F7F7F7F" />

	<Text class="input"
		alignment = "MiddleCenter"
		font = "Fonts/Friz"
		resizeTextForBestFit = "false"
		fontSize = "40"
		showAnimation = ""
		hideAnimation = ""
		animationDuration = "0"
		preferredWidth = "1000" minWidth = "1000"
		color = "rgba(1,1,1,1)"
		shadow = "rgba(0,0,0,1)"
		shadowDistance = "1 -1"
		verticalOverflow = "Overflow"
		horizontalOverflow = "Wrap" />
	<Text class="input-option"
		color = "#FFFFFF88"
		font = "Fonts/CinzelBB"
		fontSize = "45" />
	<Text class="input-player-prompt"
		rectAlignment = "UpperCenter"
		ignoreLayout = "true"
		color = "#FFFFFF"
		font = "Fonts/CinzelBB"
		alignment = "UpperCenter"
		shadow = "#000000"
		shadowDistance = "2 -2"
		fontSize = "70" />

	<InputField class="input"
		colors = "#FFFFFF00|#FFFFFF00|#C8C8C800|#BBBBBB00"
		lineType = "SingleLine"
		characterValidation = "Alphanumeric"
		characterLimit = "5"
		font = "Fonts/FrizB"
		alignment = "MiddleCenter"
		fontSize = "70"
		preferredHeight = "125" flexibleHeight = "0"
		preferredWidth = "250" flexibleWidth = "0"
		textColor = "#000000FF"
		caretColor = "#000000FF"
		caretWidth = "2"
		placeholder = " "
		scale = "0.8 1 1" />


	<InputField class="input-sticker" onEndEdit="InputHUD_Sticker" />
	<InputField class="input-envelope" onEndEdit="InputHUD_Envelope" />
	<InputField class="input-king"
		textColor = "#FFF2CC"
		characterValidation = "None"
		color = "#FFDD0011|#FFDD0033|#111111|#333333"
		caretColor = "#FFF2CC"
		placeholder = " "
		characterLimit = "25"
		fontSize = "60"
		alignment = "MiddleCenter"
		preferredHeight = "150"
		preferredWidth = "400"
		caretWidth = "2" />

	<Panel class="input-prefix-container"
		ignoreLayout = "true"
		rectAlignment = "LowerLeft"
		width = "200" height = "100"
		offsetXY = "80 33"
		onMouseDown="InputHUD_ToggleKingTitle" />
	<Panel class="input-suffix-container"
		width = "300" offsetXY = "-250 -20" rectAlignment = "LowerRight" />
	<Text class="input-prefix"
		color = "#FFF2CC"
		font = "Fonts/FrizB"
		fontSize="60"
		horizontalOverflow = "Overflow"
		alignment="UpperRight"
		offsetXY = "0 9"
		/>
	<Text class="input-suffix" font = "Fonts/FrizI" fontSize = "40" alignment = "UpperLeft" offsetXY = "0 -5" />

	<Image class="input-input"
		ignoreLayout = "true"
		rectAlignment = "LowerCenter"
		height = "125"
		width = "400"
		offsetXY = "0 15"
		scale = "1 1 1" />
	<Image class="input-sticker-bg" image="fetch-sticker-bg" color="#FFFFFF33" />
	<Image class="input-sticker-border" image="fetch-sticker-border" />
	<Image class="input-sticker-icon" image="fetch-sticker-icon" />
	<Image class="input-envelope-bg" image="fetch-envelope-bg" color="#FFFFFF33"  />
	<Image class="input-envelope-border" image="fetch-envelope-border" />
	<Image class="input-envelope-icon" image="fetch-envelope-icon" />
	<Image class="input-king-bg" height="95%" offsetXY = "0 10" />
	<Image class="input-king-border" image=""
		ignoreLayout = "true"
		color = "#FFFFFF11"
		offsetXY = "0 8"
		rectAlignment = "MiddleCenter"
		preserveAspect = "false"
		width = "400" height = "60" />
</Defaults>

