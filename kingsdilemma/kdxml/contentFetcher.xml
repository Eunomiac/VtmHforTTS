<Defaults>
	<Image class="king-confirm"
		ignoreLayout = "true"
		preserveAspect = "false"
		rectAlignment = "LowerRight"
		raycastTarget = "true"
		onMouseDown = "InputHUD_KingConfirm"
		height = "50"
		width = "50"
		offsetXY = "-290 -40" />
