LISTENERS = {
	SecretAgendas = function(pColor, obj)
		if not obj.hasTag("SecretAgenda") then return end
		local player = S.getPlayer(pColor)
		local nextPlayer = P.GetNextLeastPrestigious(pColor)
		if not nextPlayer then
			DIR.EndSecretAgendas()
		else
			U.Alert("Dealing To " .. nextPlayer.color)
			U.sequence(U.concat(
				U.map(player.getHandObjects(), function(obj)
					return function()
						if obj.hasTag("SecretAgenda") then
							obj.deal(1, nextPlayer.color)
						end
					end
				end),
				{
					function()
						MSG.Splash("Choose and Place Behind Your Screen", nextPlayer.color)
					end
				}))
		end
	end
}
function DIR.SetDropListener(name)
	log({name = name, listener = LISTENERS[name]}, "SetDropListener")
	U.Val("L.AddDropListener", name, type(name) == "string" and LISTENERS[name] ~= nil)
	-- Global.setValue("onObjectDrop", LISTENERS[name])
end

function DIR.ADVANCE(waitFunc)
	local mode, phase = S.getNextPhase()
	local function startPhase()
		S.setStateVal(mode, "gameMode")
		S.setStateVal(phase, "gamePhase")
		DIR.InitializePhase()
	end

	if waitFunc then
		U.waitUntil(startPhase, waitFunc, true)
	else
		startPhase()
	end
end

function DIR.RESET()
	S.setStateVal("NONE", "gameMode")
	S.setStateVal("NONE", "gamePhase")
	HOUSE_SELECTION = {}
	P.InitializeSeats()
	DIR.InitializePhase()
end

