function getSortedVictoryBoardSnapPoints(victoryBoard)
  local snapPointPositions = U.map(U.getSnapPointPositions(victoryBoard), function(posData) return U.roundTableVals(posData) end)
  table.sort(snapPointPositions, function(a,b)
    if (math.abs(a.z - b.z) <= 0.1) then
      return a.x < b.x
    end
    return a.z < b.z
  end)
  return snapPointPositions
end

function getClanToken(playerColor)
  local clan = H.getStateVal("clans", playerColor)
