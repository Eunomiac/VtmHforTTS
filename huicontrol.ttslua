-- === LastChapterStandings ===
function H.checkLastChapterStandings(data)
  if data == nil then data = H.getStateVal("lastChapterStandings") end
  if not (type(data) == "table" and #data == #Player.getPlayers()) then return false end
  if table.concat(table.sort(U.clone(data))) != "BlueRedYellow" then return false end
  return true
end
function H.getLastChapterStandings()
  if (H.checkLastChapterStandings()) then
    return H.getStateVal("lastChapterStandings")
  end
  -- broadcastToColor("[getLastChapterStandings] " .. logString(H.getStateVal("lastChapterStandings")) .. " is invalid state! Using fallback value.", "Red", "Red")
  return fallbackValues.lastChapterStandings
end
function H.getLastChapterVictor()
  return H.getLastChapterStandings()[1]
end
function H.getLastChapterVanquished()
  return H.getLastChapterStandings()[3]
end
function H.determineLastChapterStandings(callback)
  if not H.checkLastChapterStandings() then
    H.askLastChapterStandings(function() H.determineLastChapterStandings(callback) end)
  end
end
function H.setLastChapterStandings(data)
  if (H.checkLastChapterStandings(data)) then
    H.setStateVal(data, "lastChapterStandings")
    return
  end
  broadcastToColor("[setLastChapterStandings] " .. logString(data) .. " is invalid data!", "Red", "Red")
end
